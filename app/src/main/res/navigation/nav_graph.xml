<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mohnage7.weather.features.home.view.ui.HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment android:id="@+id/cameraFragment"
        android:name="com.mohnage7.weather.features.camera.view.CameraFragment">
        <action
            android:id="@+id/action_cameraFragment_to_shareFragment"
            app:destination="@id/shareFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment android:id="@+id/shareFragment"
        android:name="com.mohnage7.weather.features.weatherphoto.view.ui.WeatherPhotoFragment">

    </fragment>
</navigation>